        <put-attribute name="title" value="{1}" />
    </definition>
    
       	<definition name="myPageCompany/*" extends="mypage">
		<put-attribute name="left" value="/WEB-INF/views/templates/myPage/companyLeft.jsp"/>
        <put-attribute name="main" value="/WEB-INF/views/myPageCompany/{1}.jsp" />        
        <put-attribute name="title" value="{1}" />
    </definition>
    
         <definition name="myPageAdmin/*" extends="mypage">
		<put-attribute name="left" value="/WEB-INF/views/templates/myPage/adminLeft.jsp"/>
        <put-attribute name="main" value="/WEB-INF/views/myPageAdmin/{1}.jsp" />        
        <put-attribute name="title" value="{1}" />
